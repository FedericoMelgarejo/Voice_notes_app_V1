<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>

<body class="h-100 my-3 mx-3">
    <a href="/" class="btn btn-secondary my-3">Back</a>
    <div class="row">
        <div class="mb-3" style="border: 1px solid black;">
        </div>
        <% if(records.length> 0) { records.forEach(rec=> { %>

            <div class="col-sm-12 col-md-6 col-lg-6 col-xxl-4 my-3">
                <div class="card text-center bg-light ">
                    <div class="card-body">
                        <h4 class="card-title">
                            Title:
                            <%= rec.title %>
                        </h4>
                        <h6 class="card-title">To: <%= rec.addressee %>
                        </h6>
                        <label class="mb-3" for="date">Date:</label>
                        <p class="card-text">
                            <%= rec.createdAt %>
                        </p>
                        <div class="mb-3">

                            <% if(rec.file !='no_file' ){ %>

                                <audio id="preview" controls>
                                    <source src="../records/<%= rec.file %>" type="audio/ogg" />
                                </audio>

                                <% } else { %>
                                    <div class="py-1 mt-1">
                                        <h2>
                                            There is no file
                                        </h2>
                                    </div>
                                    <% } %>

                        </div>
                        <a href="update/<%=rec.id%>" class="btn btn-secondary">Edit</a>
                        <a href="delete/<%=rec.id%>" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
            <% }) } else { %>
                <div class="d-flex justify-content-center">
                    <h2>
                        Sorry, there is no records to show.
                    </h2>
                </div>
                <% } %>


    </div>
    <script type="text/javascript" src="../js/recordUpdate.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
        </script>
</body>

</html>